<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
<!-- 用于tab的背景修改。曾一度认为只需在系统tab的基础上修改一下颜色即可，
	其实不然。需另外弄几张图片，
	（如我想把tab改成红色背景，那么我就要找几张红色背景的图片）。 -->
	
	<!-- 
    <item android:drawable="@drawable/ad_tab_unselected_holo" android:state_focused="false" android:state_pressed="false" android:state_selected="false"/>
    <item android:drawable="@drawable/ad_tab_selected_holo" android:state_focused="false" android:state_pressed="false" android:state_selected="true"/>
    <item android:drawable="@drawable/ad_tab_selected_pressed_holo" android:state_pressed="true" android:state_selected="false"/>
    <item android:drawable="@drawable/ad_tab_selected_pressed_holo" android:state_pressed="true" android:state_selected="true"/>
     -->
     
     <item android:state_selected="false" android:state_pressed="false" android:drawable="@android:color/transparent" />
    <item android:state_selected="false" android:state_pressed="true" android:drawable="@android:color/transparent" />     
       
    <item android:state_selected="true"  android:state_pressed="false" android:drawable="@drawable/base_tabpager_indicator_selected" />
    <item android:state_selected="true"  android:state_pressed="true" android:drawable="@drawable/base_tabpager_indicator_selected" />

</selector>

